<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileServiceMobileApp.NewMoviePage">

    <StackLayout>
        <Button x:Name="CancelButton" Clicked="Cancel_Clicked" Text="Back" HorizontalOptions="End" />
        <Label Text="Add a new movie" HorizontalTextAlignment="Center" FontSize="Title" Padding="30,30,30,10" />

        <StackLayout Orientation="Vertical" Spacing="10" Padding="15">
            <Entry x:Name="TitleEntry" Placeholder="Title"   
                           HeightRequest="40" />
            <DatePicker x:Name="ReleaseDatePicker" />
            <Entry x:Name="DirectorEntry" Placeholder="Director"   
                           HeightRequest="40" />
            <Entry x:Name="ActorsEntry" Placeholder="Actors"   
                           HeightRequest="40" />
            <Editor x:Name="DescriptionEditor" Placeholder="Description" />
            <Button x:Name="AddButton" Clicked="Add_Clicked" Text="Add" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5" />
            <Label x:Name="ErrorLabel" TextColor="Red" Text ="" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </StackLayout>
</ContentPage>